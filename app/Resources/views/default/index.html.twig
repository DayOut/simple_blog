{% extends 'base.html.twig' %}

{% block body %}
        {% for post in posts %}
            <div class="row asaaa">
                <div class="post">

                    <div class="row title">
                        <h3><a href="{{ path('post', {'id':post.id}) }}">{{ post.title }}</a></h3>
                    </div>
                    <div class="row article">
                        {{ post.getFirstParagraph() }}
                        <a href="{{ path('post', {'id':post.id}) }}">Читать далее... &#9;Комментарии({{ post.comments.count }})</a>
                    </div>
                    <div class="row spacing">&nbsp</div>
                </div>
            </div>
        {% endfor %}
{% endblock %}


